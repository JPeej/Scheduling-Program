<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="290.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AddCustomerController">
   <children>
      <Label layoutX="40.0" layoutY="114.0" text="Name" />
      <Label layoutX="40.0" layoutY="194.0" text="Address" />
      <Label layoutX="40.0" layoutY="234.0" text="Zipcode" />
      <Label layoutX="40.0" layoutY="154.0" text="Phone" />
      <ComboBox fx:id="countryCombo" layoutX="40.0" layoutY="270.0" onAction="#onActionCountryCombo" prefHeight="26.0" prefWidth="210.0" promptText="Country" />
      <ComboBox fx:id="divCombo" layoutX="40.0" layoutY="310.0" prefHeight="26.0" prefWidth="210.0" promptText="State / Province" />
      <Button layoutX="45.0" layoutY="386.0" mnemonicParsing="false" onAction="#onActionSaveCustomer" prefWidth="75.0" text="Save" />
      <Button layoutX="172.0" layoutY="386.0" mnemonicParsing="false" onAction="#onActionCancel" prefWidth="75.0" text="Cancel" />
      <Label layoutX="41.0" layoutY="48.0" text="Add New Customer" underline="true">
         <font>
            <Font size="24.0" />
         </font></Label>
      <TextField fx:id="nameText" layoutX="100.0" layoutY="110.0" />
      <TextField fx:id="zipText" layoutX="99.0" layoutY="230.0" />
      <TextField fx:id="phoneText" layoutX="100.0" layoutY="150.0" />
      <TextField fx:id="addressText" layoutX="99.0" layoutY="190.0" prefHeight="25.0" prefWidth="149.0" promptText="### Street, State/Province">
         <font>
            <Font size="11.0" />
         </font></TextField>
   </children>
</AnchorPane>
